{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@qsa/shared/*": [
        "packages/shared/src/*"
      ],
      "@qsa/memory/*": [
        "packages/memory/src/*"
      ],
      "@qsa/agents/*": [
        "packages/agents/src/*"
      ]
    }
  }
}
